---
const { title = "Inkfield" } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://use.typekit.net/pwa7kgg.css" />

    <title>{title}</title>
  </head>

  <body>
    <header class="site-header">
      <a href="/" class="logo">
        <img src="/inkfield-logo.svg" alt="Inkfield" />
      </a>

      <button class="hamburger" id="hamburger">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div>inkfield</div>
      <div>95 Victorian Grove, London, N16 8EJ</div>
    </footer>

    <script>
      const hamburger = document.getElementById("hamburger");

      hamburger?.addEventListener("click", () => {
        hamburger.classList.toggle("open");
      });
    </script>
  </body>
</html>
